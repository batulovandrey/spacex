<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/grey_temp" />
            <gradient android:angle="-90" android:startColor="@color/grey_temp" android:endColor="@color/grey_temp"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/brown" />
            <gradient android:angle="-90" android:startColor="@color/grey_temp" android:endColor="@color/button_grey" />
        </shape>
    </item>
</selector>